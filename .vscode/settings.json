{
  //-----------
  //ファイル関係
  //-----------
  //オートフォーマット
  "editor.formatOnSave": true,
  //オートセーブ
  "files.autoSave": "onFocusChange",
  //保存時に最後の２行をなければ生成、それ以外を削除
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  //---------
  //エディタUI
  //---------
  //テーマ
  "workbench.colorTheme": "fairyfloss",
  "editor.minimap.enabled": true,
  "editor.minimap.autohide": true,
  "breadcrumbs.enabled": true,
  "editor.tabSize": 4,
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.roundedSelection": true,
  "editor.fontFamily": "'Jetbrains Mono','PlemolJP'",
  "editor.fontSize": 13,
  "editor.tokenColorCustomizations": {
    "comments": "#999"
  },
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#82c6fd",
    "editorBracketHighlight.foreground3": "#0ec579",
    "editorCursor.background": "#5d67ee",
    "editorCursor.foreground": "#e374ff",
    "editorOverviewRuler.bracketMatchForeground": "#00ff9571",
    "editorBracketMatch.background": "#8d5bc5",
    "editorBracketMatch.border": "#c08ff8"
  },
  "cSpell.words": [
    "actix"
  ]
  //---
  //言語個別設定
  //---
}
